@model WebApplication.Models.ModifyAlbumModel


@Html.ValidationSummary(true)
@Html.AntiForgeryToken()

@using (Html.BeginForm())
{
<div class="form-group">

    <div class="form-group" style="vertical-align:middle; text-align: center;">
        Chose album to edit:
        @Html.DropDownListFor(m => m.Id, WebApplication.Models.ModifyAlbumModel.ChooseAlbum(), new { style = "color:black" })
    </div>
    <div class="form-group" style="vertical-align:middle; text-align: center;">
        Modify artist name:
        @Html.EditorFor(model => model.NewArtistName, new { htmlAttributes = new { style = "Color:Black" } })
    </div>

    <div class="form-group" style="vertical-align:middle; text-align: center;">
        Modify album name:
        @Html.EditorFor(model => model.NewAlbumName, new { htmlAttributes = new { style = "Color:Black" } })
    </div>
    <div class="form-group" style="vertical-align:middle; text-align: center;">
    <form action="" method="post">
        <input type="submit" value="Modify" name="action:ModifyAlbum" style="color:black" />
        <input type="submit" value="Delete" name="action:DeleteAlbum" style="color:black" />
    </form>
    </div>

</div>
}


    <div class="col-lg-push-5" style="vertical-align:middle; text-align: center;">
        @ViewBag.Message
        @Html.ValidationMessage("error")
    </div>
